//- Navigation mixin
mixin navigation(currentPage)
  header.header
    nav.navbar
      .nav-container
        .nav-logo
          a(href="/")
            i.fas.fa-heartbeat
            span FitJourney
        .nav-menu
          if currentPage === 'dashboard'
            span#userName.user-name Welcome!
            a.nav-link(href="/") Home
            a.nav-link.active(href="/dashboard") Dashboard
            a.nav-link(href="/profile") Profile
          else
            a.nav-link(href="#features") Features
            a.nav-link(href="#about") About
            a.nav-link.btn-primary(href="/onboarding") Get Started

//- Feature card mixin
mixin featureCard(iconClass, title, description)
  .feature-card
    .feature-icon
      i(class=iconClass)
    h3= title
    p= description

//- Hero card mixin
mixin heroCard(iconClass, title, description)
  .hero-card
    .card-icon
      i(class=iconClass)
    h3= title
    p= description

//- Metric card mixin
mixin metricCard(iconClass, label, valueId, value = '-')
  .metric-card
    .metric-icon
      i(class=iconClass)
    .metric-info
      span.metric-label= label
      span.metric-value(id=valueId)= value

//- Form input mixin
mixin formInput(type, id, label, name, required = false, min, max, options)
  .form-group
    label(for=id)= label
    if type === 'select'
      select(id=id name=name required=required)
        option(value="") Select #{label}
        each option in options
          option(value=option.value)= option.text
    else
      input(type=type id=id name=name required=required min=min max=max)

//- Button mixin
mixin button(type, classes, text, iconClass, onclick)
  button(type=type class=classes onclick=onclick)
    if iconClass
      i(class=iconClass)
    | #{text}

