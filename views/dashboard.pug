extends layouts/layout
include mixins

block content
  +navigation('dashboard')



  main.dashboard-main
    .dashboard-container
      // Hero Section
      div(style="margin-top: 0.5rem;")
      .hero-content(style="padding: 0; background: none; box-shadow: none; border: none;")
        h1
          | Welcome back, 
          span#userNameDisplay User
          | ! üëã
        p#currentDate.date-display
        #quoteText.quote-text Loading your daily motivation...

      // Health Metrics Dashboard
      .metrics-dashboard
        +metricCard('fas fa-weight', 'BMI', 'bmiDisplay')
        +metricCard('fas fa-fire', 'Daily Calories', 'caloriesDisplay')
        +metricCard('fas fa-dumbbell', 'Workout Level', 'workoutLevelDisplay')

      // Main Content Sections
      .content-sections
        // Workouts Section
        section.content-section
          .section-header
            .section-info
              h2
                i.fas.fa-dumbbell
                |  Today's Workouts
              p.section-subtitle Personalized exercises for your fitness level
            button.refresh-btn(onclick="refreshWorkouts()" title="Refresh Workouts")
              span(style="font-size:1.2em; font-weight:600; letter-spacing:0.5px; display:flex; align-items:center; gap:0.3em;")
                i.fas.fa-ellipsis-v
                |  More Options
          #workoutsList.workouts-list
            .loading-text
              i.fas.fa-spinner.fa-spin
              |  Loading workouts...

        // Meals Section
        section.content-section
          .section-header
            .section-info
              h2
                i.fas.fa-utensils
                |  Today's Meals
              p.section-subtitle Delicious recipes tailored to your preferences
            button.refresh-btn(onclick="refreshMeals()" title="Refresh Meals")
              span(style="font-size:1.2em; font-weight:600; letter-spacing:0.5px; display:flex; align-items:center; gap:0.3em;")
                i.fas.fa-ellipsis-v
                |  More Options
          #mealsList.meals-list
            .loading-text
              i.fas.fa-spinner.fa-spin
              |  Loading meals...

        // Yoga & Meditation Section
        section.content-section
          .section-header
            .section-info
              h2
                i.fas.fa-pray
                |  Yoga & Meditation
              p.section-subtitle Videos for mental wellness and flexibility
            button.refresh-btn(onclick="refreshYoga()" title="Refresh Videos")
              span(style="font-size:1.2em; font-weight:600; letter-spacing:0.5px; display:flex; align-items:center; gap:0.3em;")
                i.fas.fa-ellipsis-v
                |  More Options
          #yogaList.yoga-list
            .loading-text
              i.fas.fa-spinner.fa-spin
              |  Loading videos...

  // Modals
  #workoutModal.modal
    .modal-content
      span.close √ó
      #workoutDetails.exercise-details

  #mealModal.modal
    .modal-content
      span.close √ó
      #mealDetails.recipe-details

  #yogaModal.modal
    .modal-content
      span.close √ó
      .video-container
        #yogaVideo

  #lightboxModal.modal.lightbox-modal
    .lightbox-content
      span.lightbox-close √ó
      img#lightboxImage
      .lightbox-caption
      .lightbox-navigation
        button#lightboxPrev.lightbox-nav-btn
          i.fas.fa-chevron-left
        button#lightboxNext.lightbox-nav-btn
          i.fas.fa-chevron-right

  footer.app-footer
    .footer-content
      .footer-section
        h3
          i.fas.fa-heartbeat
          | FitJourney
        p Your personal health and wellness companion powered by smart API integrations
        .social-links
          a(href="#" aria-label="Facebook")
            i.fab.fa-facebook-f
          a(href="#" aria-label="Twitter")
            i.fab.fa-twitter
          a(href="#" aria-label="Instagram")
            i.fab.fa-instagram
          a(href="#" aria-label="YouTube")
